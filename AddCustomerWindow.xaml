<Window x:Class="JewelryShop.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelryShop"
        mc:Ignorable="d"
        Title="AddCustomerWindow" 
        Height="327.092" 
        Width="421.034"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="FirstName" 
               Content="First Name" 
               HorizontalAlignment="Center" 
               Margin="38,8,29,0" 
               VerticalAlignment="Top" 
               Height="25" 
               Width="92"/>
        <TextBox x:Name="txtFirstName" 
                 HorizontalAlignment="Center" 
                 Height="30" 
                 Margin="22,10,27,0" 
                 TextWrapping="Wrap"  
                 VerticalAlignment="Top" 
                 Width="158" 
                 Grid.Column="1"/>
        <Label x:Name="Address" 
               Content="Address" 
               HorizontalAlignment="Center" 
               Margin="62,13,70,13" 
               VerticalAlignment="Center" 
               Height="24" 
               Width="74" 
               Grid.Row="4"/>
        <TextBox x:Name="txtAddress" 
                 HorizontalAlignment="Center" 
                 Height="30" 
                 Margin="22,10,27,0" 
                 TextWrapping="Wrap"  
                 VerticalAlignment="Top" 
                 Width="158" 
                 Grid.Column="1" 
                 Grid.Row="4"/>
        <Label x:Name="BirthDate" 
               Content="Birth Date" 
               HorizontalAlignment="Center" 
               Margin="62,10,58,0" 
               VerticalAlignment="Top" 
               Height="25" 
               Width="86" 
               Grid.Row="3"/>
        <Label x:Name="MiddleInitial" 
               Content="Middle Initial" 
               HorizontalAlignment="Center" 
               Margin="38,8,13,0" 
               VerticalAlignment="Top" 
               Height="25" 
               Width="108" 
               Grid.Row="1"/>
        <TextBox x:Name="txtMiddleName" 
                 HorizontalAlignment="Center" 
                 Height="29" 
                 Margin="22,10,27,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top"
                 Width="158" 
                 Grid.Column="1" 
                 Grid.Row="1"/>
        <TextBox x:Name="txtLastName" 
                 HorizontalAlignment="Center" 
                 Height="30" 
                 Margin="22,10,27,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="158" 
                 RenderTransformOrigin="0.495,0.503" 
                 Grid.Column="1" 
                 Grid.Row="2"/>
        <DatePicker x:Name="dtBDay" 
                    HorizontalAlignment="Center" 
                    Margin="22,10,27,0" 
                    VerticalAlignment="Top" 
                    Width="158" 
                    Height="29" 
                    Grid.Column="1" 
                    Grid.Row="3"/>
        <Button x:Name="BtnAddCustomer" 
                Content="Add" 
                HorizontalAlignment="Center" 
                Margin="163,10,160,0" 
                VerticalAlignment="Top" 
                Width="90" 
                Click="BtnAddCustomer_Click" 
                Height="29" 
                Grid.ColumnSpan="2" 
                Grid.Row="5" 
                RenderTransformOrigin="0.628,0.446" BorderBrush="Black" Background="#FF6826DC"/>
        <Label x:Name="LastName" 
               Content="Last Name" 
               HorizontalAlignment="Left" 
               Margin="62,7,0,0" 
               VerticalAlignment="Top" 
               Height="25" 
               Width="90" 
               Grid.Row="2"/>

    </Grid>
</Window>
