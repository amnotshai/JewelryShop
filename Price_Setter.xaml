<Window x:Class="JewelryShop.Price_Setter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewelryShop"
        mc:Ignorable="d"
        Title="Price_Setter" 
         Height="275.023" 
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Width="232.141">
    <Window.Background>
        <ImageBrush ImageSource="purple-1862798_1280.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Set the Price for Quality " 
               HorizontalAlignment="Left" 
               Margin="10,10,0,0" 
               VerticalAlignment="Top" 
               Height="36" 
               Width="163" 
               FontSize="14" Grid.ColumnSpan="2" FontWeight="SemiBold" Foreground="#DDFFFFFF"/>
        <Label Content="10k" 
               HorizontalAlignment="Left" 
               Margin="19,10,0,0" 
               VerticalAlignment="Top" 
               Width="63" 
               Height="32" 
               FontSize="14" 
               Grid.Row="1" 
               Foreground="#DDC2ADF9"/>
        <Label Content="18k" 
               HorizontalAlignment="Left" 
               Margin="19,7,0,0" 
               VerticalAlignment="Top" 
               Width="63" 
               Height="32" 
               FontSize="14" 
               Grid.Row="2" 
               Foreground="#DDEA93FD"/>
        <Label Content="21k" 
               HorizontalAlignment="Left" 
               Margin="19,5,0,0" 
               VerticalAlignment="Top" 
               Width="63" 
               Height="32" 
               FontSize="14" 
               Grid.Row="3" 
               Foreground="#DDF0D5A7"/>
        <Button Content="Save" 
                
                HorizontalAlignment="Left" 
                Margin="75,10,0,0" 
                VerticalAlignment="Top" 
                Width="75" 
                Grid.ColumnSpan="2"
                Grid.Row="4" 
                Click="Save_Click" BorderBrush="#FFEEDB1D"/>
        <TextBox Grid.Column="1" 
                 Name="Txt10k"
                 HorizontalAlignment="Left" 
                 Height="34" 
                 Margin="10,5,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="76" 
                 Foreground="#FFA49BDE" 
                 BorderBrush="#DDC2ADF9"/>
        <TextBox Grid.Column="1" 
                 Name="Txt18k"
                 HorizontalAlignment="Left" 
                 Height="34" 
                 Margin="10,7,0,0" 
                 Grid.Row="2" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="76" 
                 BorderBrush="#DDEA93FD" 
                 Foreground="#DDEA93FD"/>
        <TextBox Grid.Column="1" 
                 Name="Txt21k"
                 HorizontalAlignment="Left" 
                 Height="34" 
                 Margin="10,8,0,0" 
                 Grid.Row="3" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="76" 
                 BorderBrush="#DDF0D5A7" 
                 Foreground="#DDF0D5A7"/>
        <TextBlock Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="65,23,0,0" 
                   Grid.Row="1" 
                   TextWrapping="Wrap" 
                   Text="Php" 
                   VerticalAlignment="Top" 
                   Height="16" 
                   Foreground="#DDC2ADF9"/>
        <TextBlock Grid.Column="1" 
                   HorizontalAlignment="Left"
                   Margin="65,23,0,0" 
                   Grid.Row="2" 
                   TextWrapping="Wrap" 
                   Text="Php" 
                   VerticalAlignment="Top" 
                   Height="16" 
                   Foreground="#DDEA93FD"/>
        <TextBlock Grid.Column="1" 
                   HorizontalAlignment="Left" 
                   Margin="65,24,0,0" 
                   Grid.Row="3" 
                   TextWrapping="Wrap" 
                   Text="Php" 
                   VerticalAlignment="Top"
                   Height="16" 
                   Foreground="#DDF0D5A7"/>

    </Grid>
</Window>
